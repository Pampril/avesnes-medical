{% extends "AvesnesMedicalecommerceBundle::layout.html.twig" %}

{% block title %}{{ parent() }} Categorie numéro :{{ categorie.id }} {% endblock %}
{% block body %}
    <table class="table table-bordered table-striped table-condensed">
        <caption>
            <h1>Categorie n°{{ categorie.id }} </h1>
        </caption>
        <thead>
        <tr>
            <th>  Nom  </th>
            <th> Description   </th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td> {{ categorie.nom }} </td>
            <td>{{ categorie.description }}</td>
        </tr>
        </tbody>
    </table>

    <p><a class="btn btn-primary btn-large"
          href="{{ path('ModifierCategorie', { 'id': categorie.id }) }}">
        Modifier »
    </a></p>

    <p><a class="btn btn-primary btn-large"
          href="{{ path('SupprimerCategorie', { 'id': categorie.id }) }}">
        Supprimer »
    </a></p>

{% endblock %}