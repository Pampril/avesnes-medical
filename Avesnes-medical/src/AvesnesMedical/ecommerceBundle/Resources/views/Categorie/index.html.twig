{% extends "AvesnesMedicalecommerceBundle::layout.html.twig" %}
{% block title %}{{ parent() }}  Accueil {% endblock %}
{% block body %}
    <h1>Categories de produits</h1>

    {% for uneCategorie in categorie %}
        <a href="{{ path('AfficherCategorie', { 'id': uneCategorie.id }) }}">{{ uneCategorie.nom }}</a><br>
    {% endfor %}

    <div class="pagination">
        <ul>
            {# On utilise la fonction range(a, b) qui cr√©e un tableau de
            valeurs entre a et b #}
            {% for p in range(1, nombrePage) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('Categories', {'page': p}) }}">{{ p
                    }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>

{% endblock %}
